@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager




@{
    ViewData["Title"] = "Entrar";
}



<div class="login-wrap">

    <div class="login-html">
        <div style="margin-bottom:30px; color:white; font-size:2em">IT4U - Gestor de Projectos</div>
        <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Sign In</label>
        <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">IT4U</label>

        <div class="login-form">
            <div class="sign-in-htm">
                <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="group">

                        <label asp-for="Email" class="label"></label>
                        <input asp-for="Email" class="input" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="group">

                        <label asp-for="Password" class="label"></label>
                        <input asp-for="Password" class="input" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="group">

                        <div class="checkbox">
                            <label asp-for="RememberMe">
                                <input asp-for="RememberMe" />
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="group">
                        <input type="submit" class="button" value="Entrar">
                    </div>
                </form>
                <div class="hr"></div>
                <div class="foot-lnk">
                    <div class="form-group">
                        <p>
                            <a asp-action="ForgotPassword">Esqueceu-se da palavra-chave?</a>
                        </p>
                        <p>
                            <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Registar-se?</a>
                        </p>
                    </div>
                </div>
            </div>
            <div class="sign-up-htm">

                <div style="color:white">
                    <h3>Gestor de Projectos</h3>
                    <p>Plataforma online onde a comunidade IPS pode partilhar os seus projectos de final de curso / estágios</p>
                </div>
            </div>
        </div>

    </div>
</div>



